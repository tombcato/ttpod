<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#a0000000"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
   		android:orientation="horizontal"
	    >
	    <ImageView 
	        android:id="@+id/iv_main_playerbar_img"
	        android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:scaleType="fitXY"
	        android:src="@drawable/img_apshare_song"/>
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:layout_marginLeft="10dp"
	        android:gravity="center_vertical"
	        >
	        <TextView 
	            android:id="@+id/tv_main_playerbar_music_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"
	            android:text="澤野弘之"
	            android:textColor="@android:color/white"/>
	        <TextView 
	            android:layout_below="@id/tv_main_playerbar_music_name"
	            android:id="@+id/tv_main_playerbar_author_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="澤野弘之"
	            android:textColor="@android:color/white"/>
	    </RelativeLayout>
	    <ImageView 
	        android:id="@+id/iv_main_playerbar_play"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/img_button_play_landscape_normal"/>
	    <ImageView 
	        android:id="@+id/iv_main_playerbar_play_next"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/img_button_next_landscape_normal"/>
	</LinearLayout>
	<SeekBar 
	    android:id="@+id/sb_main_playerbar_seekbar"
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:maxHeight="2dp"
	    android:minHeight="1dp"
	    android:layout_alignParentBottom="true"
	    android:progress="50"
	    android:progressDrawable="@drawable/xml_seekbar_playcontrolbar_progress_play"/>
</RelativeLayout>
